<div id="fairpay-widget">
    <ul class="fpTabs">
        <li class="fpTab" id="fpTab_0" data-pane="0">
            <span>Amount</span>
        </li>
        <li class="fpTab" id="fpTab_1" data-pane="1">
            <span>Identity</span>
        </li>

        <li class="fpTab" id="fpTab_2" data-pane="2">
            <span>Payment</span>
        </li>

        <li class="fpTab" id="fpTab_3" data-pane="3">
            <span>Finished</span>
        </li>
    </ul>

    <div class="panes">
        <div class="fpPane">
            <div class="fpPaneContent">
                <div>
                    <label class="fpLabel" for="fpEmail">Your Email:</label>
                    <input id="fpEmail" class="fpInput fpMax-input" type="email" placeholder="Please enter a valid email" required/>
                </div>
                <div class="fpAmount">
                    <span class="fpLabel">
                        Donation amount:
                    </span>
                    {{? it.suggested_amounts.length == 1 }}
                    {{? it.suggested_amounts[0] == -1}}

                    <input class="fpInput fpCustom-amount" type="text" placeholder="Custom Amount"/>
                    {{??}}
                    <span>{{= it.localizedAmounts[0]}}</span>
                    {{?}}
                    {{??}}
                    {{~it.suggested_amounts :val:idx}}
                    {{? val == -1}}
                    <input type="radio" id="fp_other" name="fpAmount" class="fpButton" value="other"/>
                    <label for="fp_other" class="fpButton">Other</label>
                    <input class="fpInput fpCustom-amount" type="text" placeholder="Custom Amount"/>
                    {{??}}
                    <input type="radio" id="fp_{{=val}}" name="fpAmount" class="fpButton" value="{{=val}}"/>
                    <label for="fp_{{=val}}" class="fpButton">{{=it.localizedAmounts[idx]}}</label>
                    {{?}}
                    {{~}}
                    {{?}}
                </div>
                <div class="fpBottom">
                    <button id="fpContinueAmountPane" class="fpButton fpContinue">continue</button>
                </div>
            </div>
        </div>

        <div class="fpPane">
            <h1>Pane 2</h1>
            <div>email</div>
            <div>address</div>
            <div>phone</div>
            <div>city</div>
            <div>state</div>
            <div>continue</div>
        </div>

        <div class="fpPane">
            <div class="fpPayment-types">
                <!--<div class="fpPayment-types-list">-->
                    {{~it.payment_configs :val:idx}}
                    <div class="fpPayment-type">
                        <input type="radio" id="fp_paymentType_{{=val.kind}}" name="fpPaymentType" value="{{=val.kind}}" class="fpButton"/>
                        <label for="fp_paymentType_{{=val.kind}}" class="fpButton">{{=val.label}}</label>
                        <span class="fpPayment-fees" id="fp_paymentFees_{{=val.kind}}">sfsdfdsfsd</span>
                    </div>

                    {{~}}
                <!--</div>-->
            </div>

            <div class="fpPayment-panes">
                <div id="fpPayment-pane-authorizenet" class="fpPayment-pane">
                    <label class="fpLabel" for="fpCardNumber">Card Number</label>
                    <input id="fpCardNumber" class="fpInput fpMax-input fpAuthorizenet" placeholder="Card Number" pattern="[0-9]{13,16}" required value="4400668635107057"/>

                    <label class="fpLabel" for="fpCardExp">Card Exp (mmyy)</label>
                    <input id="fpCardExp" class="fpInput fpMax-input fpAuthorizenet" placeholder="Expiration" pattern="[0-9]{4}" required value="0318"/>

                    <label class="fpLabel" for="fpCardCVV">Card CVV</label>
                    <input id="fpCardCVV" class="fpInput fpMax-input fpAuthorizenet" placeholder="CVV"  pattern="[0-9]{3,4}" required value="610"/>

                    <label class="fpLabel" for="fpCardZip">Billing Zip</label>
                    <input id="fpCardZip" class="fpInput fpMax-input fpAuthorizenet" placeholder="Billing Zip"  pattern="[0-9]{5}" required value="94703"/>

                    <div class="fpBottom">
                        <button id="fpPayWithAuthorizenet" class="fpButton fpContinue">Pay</button>
                    </div>
                </div>

                <div id="fpPayment-pane-dwolla" class="fpPayment-pane">
                    <div id="fpDowlla-pane-authorize" class="fpDwolla-pane">
                        <button id="fpDowlla-authorize" class="fpButton">Authorize with Dwolla</button>
                    </div>
                    <div id="fpDowlla-pane-pay" class="fpDwolla-pane">
                        <button id="fpDowlla-pay" class="fpButton">Pay with Dwolla</button>
                    </div>
                </div>
                <div id="fpPayment-pane-paypal" class="fpPayment-pane">
                    <h1>paypal</h1>
                </div>
            </div>
        </div>

        <div class="fpPane">
            <h1>Pane 4</h1>
            <div>recap</div>
            <div>create account</div>
        </div>
    </div>
</div>