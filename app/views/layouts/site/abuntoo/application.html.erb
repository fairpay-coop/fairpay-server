<%
   if @data && @data[:embed]
     embed = @data[:embed]
   else
     embed = {}
   end
   page_title = [embed[:page_title], 'A Project by Abuntoo'].compact.join(' - ')
%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!--<meta name="description" content="A project by Abuntoo, Front end by Rapidsols!">-->
    <!--<meta name="author" content="RAPIDSOLS">-->

    <title><%=page_title%></title>

    <base href="/">

    <!--<link href="css/bootstrap.min.css" rel="stylesheet">-->
    <link rel="stylesheet" href="/abuntoo/css/font-awesome.min.css">
    <link href="/abuntoo/css/style2.css" rel="stylesheet">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <link href="/abuntoo/css/style.css" rel="stylesheet">

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>

</head>
                      
<body>

    <nav class="navbar navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">HOME</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav pull-right navbar-nav">
          <% if auth0_signed_in %>
              <li><span>[Logged in as <%= auth0_profile.name %>]</span></li>
              <li><a onclick="location.href='/auth/logout';">Logout</a></li>
          <% else %>
              <li><a onclick="window.signin();">Login</a></li>
          <% end %>
          </ul>

        </div><!--/.nav-collapse -->
      </div>
    </nav>
  <main class="container" id="mainContainer">

    <div class="row">
      <% if embed.present? %>
        <%= render view_path('campaign_heading', embed), embed: embed %>
      <% end %>

      <%= yield %>

    </div>

  </main>

  <footer>
    <div class="container">
      <div class="col-md-12">
          <p class="footerCopyright">​© 2016 Abuntoo, Public Benefit Corporation</p>
          <ul class="bottomMenu">
            <li><a href="#" class="social"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
            <li><a href="#" class="social"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
            <li><a href="http://www.abuntoo.io">www.abuntoo.io</a></li>
            <li><a href="/terms">Terms of Service </a></li>
            <li><a href="/privacy"> Privacy Policy</a></li>
          </ul>
      </div>
    </div>
  </footer>
<!--<script src="js/bootstrap.min.js"></script>-->
<script>
  $(function() {
    $( "#accordion" ).accordion();
  });
</script>

<script src="https://cdn.auth0.com/js/lock-9.0.min.js"></script>
<script type="text/javascript">
  //todo: factor out to module config
  var lock = new Auth0Lock('7hoTB8QL1yquIQQc4UBTuDZlhwIMjHz5', 'fairpay.auth0.com');
  function signin() {
    lock.show({
      callbackURL: '<%=base_url%>/auth/auth0/callback'
      , responseType: 'code'
      , authParams: {
        scope: 'openid profile'
      }
    });
  }
</script>

</body>
</html>