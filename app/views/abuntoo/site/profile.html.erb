    <div class="row" id="profilePage">
      <div class="col-lg-4">
        <h3 class="abuntooTagLine">Your Abundance Dashboard</h3>
        <div class="sectionOneProfile visible-lg">
          <img class="floatR profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
          <img class="floatR profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
          <img class="floatR profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
          <img class="floatR profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
          <div class="clearB"></div>
        </div>
          <div class="sectionThreeProfile visible-lg">
              <img class="floatR profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
              <img class="floatR profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
              <img class="floatR profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
              <img class="floatR profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
              <div class="clearB"></div>
              <p class="orangeTxtImp textRight">your personal or business website</p>
              <p class="orangeTxtImp textRight">short bio or favorite quote</p>
          </div>


          <div class="sectionFourProfile visible-lg"></div>

        <div class="sectionFiveProfile visible-lg">
          <img class="floatR profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
          <img class="floatR profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
          <img class="floatR profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
          <img class="floatR profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
          <div class="clearB"></div>
          <p class="orangeTxt textRight" style="min-height: 92px;">your remembered card</p>
        </div>

      </div>

      <div class="col-lg-8">
        <div class="profilePageNav visible-lg">
          <a href="profile#accountNav" class="btnC2 profileNav">account</a>
          <a href="profile#socialNav" class="btnC2 profileNav">social</a>
          <a href="profile#paymentNav" class="btnC2 profileNav">payment</a>
          <a href="/" class="btnC2 profileNav profileNavBlue floatR">home</a>
          <div class="clearB"></div>
        </div>

        <%= form_for @profile, url: '/profile', method: 'post' do |f| %>

        <a id="accountNav"></a>
        <div class="mobileStars hidden-lg">
            <img class="profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
            <img class="profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
            <img class="profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
            <img class="profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
        </div>
        <div class="sectionOneProfile" id="sectionOneProfileNon-Edit">

          <p class="labelEncProfile orangeTxt floatL">name*</p>
          <p id="p1ProfilePage" class="floatL"><%=@profile.name%> <span id="editSectionOne"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></span></p>
          <div class="clearB"></div>
          <p class="labelEncProfile orangeTxt floatL">email*</p>
          <p id="p3ProfilePage" class="floatL"><%=@profile.email%></p>
          <div class="clearB"></div>
          <p class="labelEncProfile orangeTxt floatL">mobile #</p>
          <p id="p4ProfilePage" class="floatL"><%=@profile.phone%></p>
          <div class="clearB"></div>
          <p class="labelEncProfile orangeTxt floatL">zip*</p>
          <p id="p5ProfilePage" class="floatL"><%=@profile.postal_code%></p>
          <div class="clearB"></div>
        </div>

        <div class="sectionOneProfile" id="sectionOneProfileEdit">

          <p class="labelEncProfile orangeTxt floatL">name*</p>
          <%= f.text_field :name %>
          <div class="clearB"></div>

          <p class="labelEncProfile orangeTxt floatL">email*</p>
          <p id="p3ProfilePage" class="floatL"><%=@profile.email%></p>
          <div class="clearB"></div>

          <p class="labelEncProfile orangeTxt floatL">mobile #</p>
          <%= f.text_field :phone %>
          <div class="clearB"></div>

          <p class="labelEncProfile orangeTxt floatL">zip*</p>
          <%= f.text_field :postal_code %>
          <div class="clearB"></div>

          <span id="closeSectionOne"><%= image_submit_tag("/abuntoo/images/nextFrwd.svg") %></span>
          <div class="clearB"></div>
        </div>

          <a id="socialNav"></a>
          <div class="mobileStars hidden-lg">
              <img class="profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
              <img class="profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
              <img class="profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
              <img class="profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
          </div>

          <div class="sectionThreeProfile" id="sectionThreeProfileNon-Edit">
              <h3>Help fellow donors find you and discover what you have to offer to the world!</h3>
              <p><% if @profile.website.present? %><%=@profile.website%><% else %><span class="sampleText">e.g. http://www.abuntoo.io</span><% end %><span id="editSectionThree"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></span></p><div class="clearB"></div>
            <p> <% if @profile.bio.present? %><%= @profile.bio %> <% else %> <span class="sampleText">e.g. CEO of Abuntoo. Ice-cream evangelist. Choral singer. Proponent of big iron balls.  "Speak softly and swing a big kettlebell." Thank you for joining this open-hearted tribe of generous beings!</span> <% end %> </p>
          </div>

          <div class="sectionThreeProfile" id="sectionThreeProfileEdit">
            <h3>Help fellow donors find you and discover what you have to offer to the world!</h3>
            <%= f.text_field :website %>

            <%= f.text_area :bio %>

            <span class="floatL" id="closeSectionThree"><%= image_submit_tag("/abuntoo/images/nextFrwd.svg") %></span>

            <div class="clearB"></div>
          </div>

          <div class="donorBox visible-lg" style="position: relative;">
            <% if !@profile.bio.present? %><p style="position: absolute;font-size: 32px;top: 100px;left: 30px;color: red;transform: rotate(-30deg);opacity: 0.3;font-family: helvetica,sans-serif; font-weight: bold;">EXAMPLE!</p><% end %>
              <div class="titleDonor">
                  <h5><% if @profile.bio.present? %><%= @profile.name %><% else %>Cecilia Tom<% end %>
                    <a<% if @profile.website.present? %> href="<%= @profile.website %>"<% end %>><i class="fa fa-globe" aria-hidden="true"></i></a>
                  </h5>
              </div>
              <div class="clearB"></div>
              <p><% if @profile.bio.present? %><%= @profile.bio %><% else %>CEO of Abuntoo. Ice-cream evangelist. Choral singer. Proponent of big iron balls.  "Speak softly and swing a big kettlebell." Thank you for joining this open-hearted tribe of generous beings!<% end %></p>
          </div>


          <div class="donorBox donorBoxPaymentsMbl hidden-lg" style="position: relative;">
            <% if !@profile.bio.present? %><p style="position: absolute;font-size: 32px;top: 100px;left: 30px;color: red;transform: rotate(-30deg);opacity: 0.3;font-family: helvetica,sans-serif; font-weight: bold;">EXAMPLE!</p><% end %>
              <div class="titleDonor">
                <h5><% if @profile.bio.present? %><%= @profile.name %><% else %>Cecilia Tom<% end %>
                  <a<% if @profile.website.present? %> href="<%= @profile.website %>"<% end %>><i class="fa fa-globe" aria-hidden="true"></i></a>
                </h5>
              </div>
              <div class="clearB"></div>
              <p><% if @profile.bio.present? %><%= @profile.bio %><% else %>CEO of Abuntoo. Ice-cream evangelist. Choral singer. Proponent of big iron balls.  "Speak softly and swing a big kettlebell." Thank you for joining this open-hearted tribe of generous beings!<% end %></p>
          </div>

        <% end %>

        <a id="paymentNav"></a>
        <div class="sectionFiveProfile">
          <div class="mobileStars hidden-lg">
              <img class="profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
              <img class="profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
              <img class="profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
              <img class="profilePStar" width="24" src="/abuntoo/images/star.svg" alt="Abuntoo">
          </div>

          <h3 class="orangeTxt">Payment Settings</h3>
          <% if @profile.saved_payment_source.present? %>
            <p id="sectionFiveProfileNon-Edit">
              <span id="cardStatus">
                card # <%=@profile.saved_payment_source.description%>
              </span>
              <span>
                <a href="/remove_payment_source">
                  <i class="fa fa-trash" style="margin-left: 10px;"></i>
                </a>
              </span>
              <div class="clearB"></div>
            </p>
          <% else %>
            <p id="sectionFiveProfileNon-Edit">
              <span id="cardStatus">no stored payment information</span>
            </p>
          <% end %>

            <p class="notificationProfile">We do not store your payment card information. We store a special authorization
                token we receive from Stripe that can only be used by us. We do keep the last 4 digits and expiration date
                of your card to make it easier for you to identify which card you used. For more information
                on Stripe's security practices, click <a style="text-decoration: underline !important; color: black;"
                                                         href="https://stripe.com/docs/security">here</a>.</p>
        </div>

        </form>

      </div>
    </div>

    <script type="text/javascript">
  jQuery(document).ready(function() {
      jQuery("#editSectionOne").click(function(){
        jQuery("#sectionOneProfileNon-Edit").hide();
        jQuery("#sectionOneProfileEdit").show();
      });

      jQuery("#closeSectionOne").click(function(){
        jQuery("#sectionOneProfileNon-Edit").show();
        jQuery("#sectionOneProfileEdit").hide();
      });

      jQuery("#editSectionThree").click(function(){
        jQuery("#sectionThreeProfileNon-Edit").hide();
        jQuery("#sectionThreeProfileEdit").show();
      });

      jQuery("#closeSectionThree").click(function(){
        jQuery("#sectionThreeProfileNon-Edit").show();
        jQuery("#sectionThreeProfileEdit").hide();
      });

      jQuery("#editSectionFive").click(function(){
        jQuery("#sectionFiveProfileNon-Edit").hide();
        jQuery("#sectionFiveProfileEdit").show();
      });

      jQuery("#closeSectionFive").click(function(){
        jQuery("#sectionFiveProfileNon-Edit").show();
        jQuery("#sectionFiveProfileEdit").hide();
      });
  });
</script>