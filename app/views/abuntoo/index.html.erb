                <div class="clearB"></div>
                <h3 class="rewardTagline"><%= offer[:name] %></h3>
                <h5 class="rewardSubline"><i>from</i> <%= offer[:provided_by] %></h5>
                <hr>
                <p> <%= offer[:kind_label] %></p>
                <p class="donorCount"><%= offer[:allocated] %> donor(s)</p>
                <p class="donorStatus"><%= offer[:availability] %></p>
                <div class="clearB"></div>
              </div>
