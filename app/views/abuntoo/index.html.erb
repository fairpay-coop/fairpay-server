                  </div>
                </div>
                <p class="donorCount"><%= campaign[:supporter_total] %> DONORS</p>
                <hr>
                <p class="locationDonation"><i class="fa fa-map-marker"></i>    San Francisco, CA</p>
              </div>

            <%
               campaign[:offers].each do |offer|
            %>
